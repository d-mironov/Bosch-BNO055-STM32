#######################################
# Flash
#######################################
flash: clean $(BUILD_DIR)/$(TARGET).elf $(BUILD_DIR)/$(TARGET).hex $(BUILD_DIR)/$(TARGET).bin
	@printf "\n\n[\033[32m+\033[0m] Flashing \033[32m$(TARGET).bin\033[0m to the Microcontroller with \033[32mpyocd\033[0m...\n\n"
	pyocd load $(BUILD_DIR)/$(TARGET).bin -a 0x8000000 --target stm32f411ceux

erase:
	@printf "\n\n[\033[32m+\033[0m] Mass erasing Microcontroller...\n\n"
	@pyocd erase --mass --target stm32f411ceux
  
